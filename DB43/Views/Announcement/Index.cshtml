

@model IEnumerable<DB43.Models.AnnouncementViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<p>

    <div style="padding:20px"><b><u><a href="@Url.Action("ExportAnnouncement")"> Announcement PDF </a></b></u></div>
</p>  

<section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url('../../university/university/images/3047128_students.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">

                <div class="mb-5 element-animate">
                    <h1 class="mb-2">INSTITUTE MANAGEMENT SYSTEM</h1>
                    <!--<p class="bcrumb"><a href="index.html">Home</a> <span class="sep ion-android-arrow-dropright px-2"></span>  <span class="current">Contact Us</span></p>-->
                </div>

            </div>
        </div>
    </div>
</section>
<h2>Announcements</h2>

<table class="table">
<tr>
    <th>
        @Html.DisplayNameFor(model => model.text)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.CourseName)
    </th>
  
    <th></th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
       
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

