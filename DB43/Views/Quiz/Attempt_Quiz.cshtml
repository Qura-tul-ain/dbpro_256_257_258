@model DB43.Models.StudentQuizViewModel

@{
    ViewBag.Title = "Attempt_Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attempt_Quiz</h2>

<div>
    <h4>FullQuizModel</h4>
    <hr />
    @using (Html.BeginForm("Attempt_Quiz", "Quiz", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Title)
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Title)
                @Html.HiddenFor(model => Model.Title)
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.DateCreated)
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DateCreated)
                @Html.HiddenFor(model => Model.DateCreated)
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.TotalMarks)
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TotalMarks)
                @Html.HiddenFor(model => Model.TotalMarks)
                @Html.HiddenFor(model => Model.Questions)
                
            </div>
        </div>
        <div class="form-group">
            @foreach (var Q in Model.Questions)
            {
                @Html.HiddenFor(m => Q._option)
                <div>
                    @Html.DisplayFor(model => Q.Name)
                    @Html.HiddenFor(m => Q.Name)
                    @Html.HiddenFor(m => Q.Id)

                    @for (int i = 0; i < Q._option.Count(); i++)
                    {

                        @*var choice = Q._option[i];
                    @Html.RadioButtonFor(g => Q._option[i].ischecked, Q._option[i].Id)
                    @Html.Label(Q._option[i].OptionValue)*@

                        if (Q._option[i].ischecked && Q._option[i].IsAnswer)
                        {
                            <div style="background-color:lightgreen">
                                @Html.RadioButton("Quiz.Questions[" + Q._option[i].QuestionsId + "]._option[0].Id", Q._option[i].ischecked)
                                @Html.Label(Q._option[i].OptionValue)
                            </div>
                        }
                        else
                        {
                            @Html.RadioButton("Quiz.Questions[" + Q._option[i].QuestionsId + "]._option[0].Id", Q._option[i].ischecked)
                            @Html.Label(Q._option[i].OptionValue)
                            @Html.HiddenFor(m => Q._option[i].Id)
                            @Html.HiddenFor(m => Q._option[i].IsAnswer)
                            @Html.HiddenFor(m => Q._option[i].ischecked)
                            @Html.HiddenFor(m => Q._option[i].OptionValue)
                            @Html.HiddenFor(m => Q._option[i].QuestionsId)


                        }
                    }

                </div>
            }

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
