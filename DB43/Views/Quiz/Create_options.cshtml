@model DB43.Models.OptionViewModel

@{
    ViewBag.Title = "Create_options";
    Layout = "~/Views/Shared/Teacherlayout.cshtml";
}

<h2>Create_options</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
